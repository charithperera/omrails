<div class="container">
  <p>
    <strong>User:</strong>
    <%= @food.user %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @food.brand %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @food.name %>
  </p>

  <p>
    <strong>Calories:</strong>
    <%= @food.calories %>
  </p>

  <% if @food.user == current_user %>
    <%= link_to 'Edit', edit_food_path(@food) %>
  <% end %>
  <%= link_to 'Back', foods_path %>
</div>
