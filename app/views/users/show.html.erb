<div class="container">
  <h1><%= @user.username %></h1>
  <p><%= @user.name %></p>

  <h2 class="text-center">My Foods</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Name</th>
        <th>Calories</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.brand %></td>
          <td><%= food.name %></td>
          <td><%= food.calories %></td>
          <td><%= link_to 'Show', food %></td>
          <% if food.user = current_user %>
            <td><%= link_to 'Edit', edit_food_path(food) %></td>
            <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
